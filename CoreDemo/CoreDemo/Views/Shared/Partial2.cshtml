
@if (!User.Identity.IsAuthenticated)
{



    <div class="col-md-4 top-forms text-center mt-lg-3 mt-md-1 mt-0">

        <span class="mx-lg-4 mx-md-2  mx-1">
            <a href="/Login/Index">
                <i class="fas fa-lock"></i> Giriş Yap
            </a>
        </span>
        <span>
            <a href="/RegisterUser/Index/">
                <i class="far fa-user"></i> Kayıt Ol
            </a>
        </span>
    </div>
}
else
{
    <div class="col-md-4 top-forms text-center mt-lg-3 mt-md-1 mt-0">
        <span>Hoşgeldin.. <a href="/Dashboard/Index/"> @User.Identity.Name</a></span>
        <span class="mx-lg-4 mx-md-2  mx-1">
            <a href="/Login/LogOut/">
                <i class="fas fa-clock"></i> Çıkış Yap
            </a>
        </span>
        
    </div>
}
