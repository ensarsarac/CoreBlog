@using EntityLayer.Concrete
@model IEnumerable<Comment>

<div class="comment-top">
    <h4>Yorumlar (@Model.Count())</h4>

    @if (Model.Count() <= 0)
    {
        <h6>Bu Blog'a henüz yorum yapılmadı</h6>
    }
    else
    {
    foreach (var item in Model)
    {
       
        <div class="media mb-4">
            <img src="~/WriterImageFiles/@item.AppUser.ImageUrl" alt="" class="img-fluid rounded-pill" style="width:70px; height:70px; border-radius:50%" />
            <div class="media-body">
                <h5 class="mt-0">@item.AppUser.UserName</h5>
                <p>
                    @item.CommentContent
                </p>


            </div>

        </div>
        <hr />


    }

    }
</div>
