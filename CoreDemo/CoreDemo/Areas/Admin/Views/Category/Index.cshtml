@using EntityLayer.Concrete
@using X.PagedList
@using X.PagedList.Mvc.Core  
@model IPagedList<Category>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<h1>Kategori Listesi</h1>

<table class="table table-bordered">

    <tr>
        <th>#</th>
        <th>Kategori Adı</th>
        <th>Pasif Yap</th>
        <th>Aktif Yap</th>
        <th>Düzenle</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.CategoryId</td>
            <td>@item.CategoryName</td>
            <td><a href="/Admin/Category/DeleteCategory/@item.CategoryId/" id="DeleteBtn"
                   onclick="return confirm('Silmek istediğinize emin misiniz? ');" class="btn btn-danger">Pasif Yap</a></td>
            <td><a href="#" class="btn btn-warning">Aktif Yap</a></td>
            <td><a href="#" class="btn btn-success">Düzenle</a></td>
        </tr>
    }

</table>
<a href="/Admin/Category/AddCategory/" class="btn btn-primary my-3">Yeni Kategori Ekle</a>
<br />
@Html.PagedListPager((IPagedList)Model, page=>Url.Action("Index", new {page}))