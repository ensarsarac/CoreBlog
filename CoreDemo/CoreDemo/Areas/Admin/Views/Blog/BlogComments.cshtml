@using EntityLayer.Concrete
@model List<Comment>
@{
    ViewData["Title"] = "BlogComments";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

            <div class="wrapper wrapper-content animated fadeInRight">
                
                <div class="row">
                    <div class="col-lg-12">
                        <div class="ibox ">
                            <div class="ibox-title">
                                <h5>Yorumlar </h5>
                                
                            </div>
                            <div class="ibox-content">
                                
                                <div class="table-responsive">
                                    <table class="table table-striped">
                                        <thead>
                                            <tr>

                                                <th>#</th>
                                                <th>Kullanıcı</th>
                                                <th>Başlık </th>
                                                <th>Blog </th>
                                                <th>Tarih</th>
                                                <th>Sil</th>
                                                <th>Düzenle</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                            <tr>
                                                <td>@item.CommentId</td>
                                                <td>@item.AppUser.NameSurname</td>
                                                <td>@item.CommentTitle</td>
                                                <td>@item.Blog.BlogTitle</td>
                                                <td>@item.CommentDate.ToShortDateString()</td>
                                                <td><a href="/Admin/Blog/RemoveComment/@item.CommentId" class="btn btn-outline-danger">Sil</a></td>
                                                <td><a href="/Admin/Blog/CommentUpdate/@item.CommentId" class="btn btn-outline-success">Düzenle</a></td>
                                                
                                            </tr>
                                            }
                                            
                                            
                                        </tbody>
                                    </table>
                                </div>

                            </div>
                        </div>
                    </div>

                </div>
            </div>
            


