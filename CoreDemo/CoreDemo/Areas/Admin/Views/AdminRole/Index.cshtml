@using EntityLayer.Concrete
@model List<AppRole>
    @{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
    }

    <div class="wrapper wrapper-content animated fadeInRight">

        <div class="row">
            <div class="col-lg-12">
                <div class="ibox ">
                    <div class="ibox-title">
                        <h5>Roller </h5>

                    </div>
                    <div class="ibox-content">

                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>

                                        <th>#</th>
                                        <th>Başlık</th>
                                        <th>Sil</th>
                                        <th>Düzenle</th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                            {
                                    <tr>
                                        <th>@item.Id</th>
                                        <td>@item.Name</td>
                                        <td><a href="/Admin/AdminRole/DeleteRole/@item.Id/" class="btn btn-outline-danger">Sil</a></td>
                                        <td><a href="/Admin/AdminRole/UpdateRole/@item.Id/" class="btn btn-outline-success">Düzenle</a></td>

                                    </tr>
                                            }


                                </tbody>
                            </table>
                            <a href="/Admin/AdminRole/AddRole/" class="btn btn-outline-primary">Yeni Rol Ekle</a>
                            <a href="/Admin/AdminRole/UserRoleList/" class="btn btn-outline-primary">Kullanıcı Rol Listesi</a>
                        </div>

                    </div>
                </div>
            </div>

        </div>
    </div>
